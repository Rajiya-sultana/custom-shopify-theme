<div class="logoList--container  " style="padding-top: {{ section.settings.padding_top | append: 'px' }}; padding-bottom: {{ section.settings.padding_bottom | append: 'px' }}">
  <h1 class="titles {{ section.settings.heading_size }} {% if section.settings.text_alignment == 'center' %} center {% endif %}">{{ section.settings.title | escape }}</h1>

  <ul class="logo-list">
    {%- for block in section.blocks -%}
      <li class="logoList--item" {{ block.shopify_attributes }}>
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}">
        {%- endif -%}
          {%- if block.settings.image != blank -%}
            {{ block.settings.image | img_url: '160x160', scale: 2 | img_tag: block.settings.image.alt }}
          {%- else -%}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        {%- if block.settings.link != blank -%}
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</div>

<style>
#shopify-section-{{ section.id }} .logoList--container {
  padding-top: 20px;
  padding-bottom: 20px; 
  margin: auto;
}

#shopify-section-{{ section.id }} .logo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  align-items: center;
  justify-content: center;
  list-style: none;
  padding: 0;
}

#shopify-section-{{ section.id }} .logoList--item {
  max-width: 190px;
}

#shopify-section-{{ section.id }} .logoList--item img {
  width: 100%;
}

/* Responsive layout similar to col-6 col-sm-4 col-md-2 */
#shopify-section-{{ section.id }} .logoList--item {
  width: 50%; /* 2 items per row (like col-6) */
}
    @media (max-width: 422px){
     #shopify-section-{{ section.id }} .logoList--item {
    width: 44%; /* 6 items per row (like col-md-2) */
  }
  }

@media (min-width: 576px) {
  #shopify-section-{{ section.id }} .logoList--item {
    width: 33.33%; /* 3 items per row (like col-sm-4) */
  }
}

@media (min-width: 768px) {
  #shopify-section-{{ section.id }} .logoList--item {
    width: 13.67%; /* 6 items per row (like col-md-2) */
  }
}

</style>



